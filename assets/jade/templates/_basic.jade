block template-variables
  - var pageSettings = {title: "notebuuk", description: "A new brand of premium notebuuks. Completely handmade and awesome."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
      title!= pageSettings.title
      meta(name="description", content=pageSettings.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

      link(href="assets/favicon.ico", rel="shortcut icon")

      <!-- build:css assets/css/style-min.css -->
      link(rel="stylesheet", href="bower_components/normalize-css/normalize.css")
      link(rel="stylesheet", href="bower_components/idangerous-swiper/dist/idangerous.swiper.css")
      link(rel="stylesheet", href="assets/css/style.css")
      <!-- endbuild -->

      script(src="//use.typekit.net/xsp8gmu.js")
      script try{Typekit.load();}catch(e){}

  body
    include /bower_components/chj-framework/assets/jade/mixins/_dummy
    include ../../svg/complete.svg

    block template-body
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")
      
      <!-- build:remove -->
      script window.jQuery || document.write("<script src='bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->

      <!-- build:js assets/js/app-min.js -->
      script(src="bower_components/jquery-easing-original/jquery.easing.1.3.js")
      script(src="bower_components/idangerous-swiper/dist/idangerous.swiper.js")
      script(src="bower_components/jquery-waypoints/lib/jquery.waypoints.js")

      script(src="assets/js/vendor/svgAddClass.js")
      script(src="assets/js/vendor/svgRemoveClass.js")

      script(src="assets/js/nb-base.js")
      script(src="assets/js/nb-waypoints.js")

      script(src="bower_components/chj-framework/assets/js/chj-external.js")
      script(src="bower_components/chj-framework/assets/js/chj-detect.js")

      script(src="assets/js/nb-scrollto.js")
      script(src="assets/js/nb-carousel.js")
      script(src="assets/js/nb-parallax.js")
      <!-- endbuild -->