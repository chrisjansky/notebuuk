      meta(name="description", content=page.description)
      meta(name="viewport" content="1024")

      meta(property="og:title", content="notebuuk — papír je radost")
      meta(property="og:description", content="Nová česká značka prémiových deníků a skicáků, ručně vyráběných v limitovaných edicích.")
